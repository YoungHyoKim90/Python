class Animal :
    def __init__(self):
        self.age = 0
        
    def oneYear(self):
        self.age += 1

class Human(Animal) :
    def __init__(self):
        self.flagLang = False
        
    def momstouch(self):
        self.flagLang = True


if __name__ == '__main__':
    ani = Animal()
    print("myoop01 : ",ani.age)
    ani.oneYear()
    print("myoop01 : ",ani.age)
    hum = Human()
    print("hum : " , hum.flagLang)
    hum.momstouch()
    print("hum + momstouch : ", hum.flagLang)