class Animal :
    def __init__(self):
        self.age = 0
        
    def oneYear(self):
        self.age += 1

class Human(Animal) :
    def __init__(self):
        super().__init__()
        self.flagLang = False
        
    def momstouch(self):
        self.flagLang = True


if __name__ == '__main__':
    ani = Animal()
    print("ani : ",ani.age)
    ani.oneYear()
    print("ani + oneYear : ",ani.age)
    print("---------------------------------------")
    hum = Animal()
    print("hum : ",hum.age)
    hum.oneYear()
    print("hum + oneYear : ",hum.age)
    hum = Human()
    print("hum : " , hum.flagLang)
    hum.momstouch()
    print("hum + momstouch : ", hum.flagLang)
    
    
    
    
    
    
    
    
    
    
    
    
    
    